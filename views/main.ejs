<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>쿠이김</title>
    <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
    <%- include("common/header") %>
   <div class="content-form">
     <div class="Streaming">
      <% for(let i = 0; i < livePlaylists.length; i++) { %>
        <% const playlist = livePlaylists[i]; %>
        <% const broadcastId = liveIds[i]; %>
          <div class="live-playlist">
            <img src="/public/images/logo_seaweed.png" alt="Live Logo" class="live-logo">
            <h3><%= playlist.playlistName %></h3>
            <p>현재 방송 중</p>
            <a href="/live/viewers?playlistName=<%= encodeURIComponent(playlist.playlistName) %>&broadcastId=<%= broadcastId %>">
              <button>시청하기</button>
            </a>
          </div>
        <% } %>
    </div>
    <div class="music">
      <div class="music-move">
        <div>추천곡</div>
        <a href="/detail">전체곡 보기</a>
      </div>
        <% for(let i =0; i < musicList.length; i++){ %>
            <div class="music-form" data-id="<%= musicList[i].id %>">
                <img src="/public/images/musicimages/<%= musicList[i].songImg %>" alt="">
                <div>가수 : <%= musicList[i].songName %></div>
                <div>제목 : <%= musicList[i].artist %></div>
            </div>
        <% } %>
    </div>
    <div class="right-form">

        <div class="login">
            <% if(!user){ %>
            <div class="login-form">
                <h2>카카오톡 로그인</h2>
                <a href="/login">
                    <img src="/public/images/kakaologin.png" class="kakao-img" alt="">
                </a>
            </div>
            <% }else{ %>
            <div class="logout-form">
                <h2>카카오톡 로그아웃</h2>
                <a href="/logout">
                    <img src="/public/images/kakaologout.png" class="kakao-img" alt="">
                </a>
            </div>
            <% } %>
        </div>
        <div id="mini-chart">
          <h3>인기차트 🔥</h3>
          <% for(let i =0; i < plainChatList.length; i++){ %>
          <div class="mini-chart-item" data-id="<%= plainChatList[i].id %>" >
            <%= i+1 %>. <%= plainChatList[i].artist %> - <%= plainChatList[i].songName %>
          </div>
            <% } %>

        </div>
    </div>
    
    <!-- 숨긴 오디오 -->
<audio id="audio" src="" style="display: none;"></audio>

<!-- 커스텀 플레이어 -->
<div id="custom-player">
  <div class="player-left">
    <img id="player-img" src="" alt="앨범 커버">
    <div class="player-info">
      <div id="player-title"></div>
      <div id="player-artist"></div>
    </div>
    <div class="player-times">
      <span id="current-time"></span> / <span id="duration"></span>
    </div>
  </div>

  <div class="player-center">
    <!-- 🎵 이전곡 버튼 추가 -->
    <button id="prev-btn">⏮️</button>

    <!-- ▶️ 재생/일시정지 버튼 -->
    <button id="play-pause-btn">▶️</button>

    <!-- 🎵 다음곡 버튼 추가 -->
    <button id="next-btn">⏭️</button>

    <input type="range" id="seek-bar" value="0" min="0" max="100">

    <div class="player-menu">
      <button id="menu-button">⋮</button> <!-- 점 세개 메뉴 버튼 -->
    </div>
  </div>

  <div class="player-like">
    <button id="like-button">🤍</button>
  </div>
</div>

</body>
<script src="/public/JS/main.js"></script>
</html>